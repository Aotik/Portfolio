*
  box-sizing: border-box;

global-reset();

html
  height: 100%;
  width: 100%;
  font-size: font-size-standard;

body
  font-family: font-family-standard;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  color: text-default;
  height: 100%;
  width: 100%;
  margin: 0;
  padding: 0;
  overflow: hidden;

for h in (1 .. 6)
  h{h}
    line-height: 1.8em;
    font-size: lookup('font-size-h' + h);
    font-weight: 600;
    letter-spacing: -.03em;
    color: color-heading;
    font-family: font-family-heading;

::selection
  color: #fff;
  background-color: lighten(primary-color, 30%);

.light
  color: color-subheading;

a
  color: #000;
  cursor: pointer;
  position: relative;
  text-decoration: none;

  &:hover
    color: darken(color-primary, 10%);

  &.ph-link
    color: #da552f;

    &:hover
      color: darken(#da552f, 5%);

li > a
  &:hover
    text-decoration: none;

p
  line-height: 1.7em;
  color: text-default;

b, strong, .strong
  font-weight: 600;

small
  font-size: font-size-small;
