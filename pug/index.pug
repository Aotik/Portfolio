						i.ion-social-linkedin

		script.
			thisT = $('.project').find('.project__learn')
			thisA = $('.project').find('.project__learn a')

			hoverOn = (e) => {
				console.log(e);
				console.log(e.target);
				thisT = $(e.target).closest('.project').find('.project__learn')
				thisA = $(e.target).closest('.project').find('.project__learn a')
				thisT.show("slide", { direction: "down" }, 100)
				thisA.delay(100).fadeIn('fast')
			}

			hoverOff = (e) => {
				thisT.hide("slide", { direction: "down" }, 100)
				thisA.hide()
			}

			$(()=> {
				$(".project").hover3d({
					selector: ".project__card"
				})
				$(".project").hover((e) => {
					hoverOn(e)
				}, (e)=> {
					hoverOff(e)
				}).bind('touchend', (e) => {
					hoverOff(e)
				}).bind("click", (e)=> {
					thisP = $(e.target).closest('.project')
					if($(thisP).attr('href') !== undefined) {
						window.location = $(thisP).attr('href')
					}
				}).bind("touchstart", (e) => {
						hoverOn(e)
				}).bind("touchend", (e) => {
						hoverOff(e)
				})
			})
