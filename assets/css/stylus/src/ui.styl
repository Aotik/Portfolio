body
	font-family font-family-standard
	font-size font-size-standard
	color text-grey

for h in (1..6)
	h{h}
		font-weight 300
		line-height 1.5em
		font-size lookup('font-size-h' + h)

h2
	line-height 1.3em
	letter-spacing -1.3
	font-weight 100

::selection
	color black
	background-color lighten(primary-color, 80%)
a
	color text-link
	text-decoration none
	cursor pointer
	&:hover
		color text-link-hover

p
	line-height 1.4em

small
	font-size .875em

strong
	font-weight 700
